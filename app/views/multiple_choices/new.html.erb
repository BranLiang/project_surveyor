<div class="new-question">
  <%= render 'shared/question_header', survey: @survey %>

  <h3><strong>Add a Multiple Choice Question:</strong></h3>
  <h4><strong>1. Select options</strong> | <span class="text-muted">2. Add Question Text</span></h4>

  <hr>

  <%= form_for @question, url: new_survey_multiple_path(@survey), method: "get" do |f| %>
    <div class="form-group">
      <h4>How many options should the question have?</h4>
      <%= select_tag :response_num,options_for_select((1..6).map {|i| [i,i] }), class: "form-control" %>
    </div>
    <h4>How many options can be selected?</h4>
    <div class="form-group">
      <label>
        <%= f.radio_button :multi_selection, true, class: "form-inline" %>
        Just One
      </label>
    </div>
    <div class="form-group">
      <label>
        <%= f.radio_button :multi_selection, false, class: "form-inline" %>
        Multiple
      </label>
    </div>
    <h4>Is the question require?</h4>
    <div class="form-group">
      <label>
        <%= f.radio_button :required, true, class: "form-inline" %>
        Yes
      </label>
    </div>
    <div class="form-group">
      <label>
        <%= f.radio_button :required, false, class: "form-inline" %>
        No
      </label>
    </div>
    <div class="form-group">
      <%= f.submit "Continue to the Next Step", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  <% end %>



</div>
